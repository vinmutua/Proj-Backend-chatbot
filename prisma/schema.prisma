datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String         @id @default(uuid())
  email        String        @unique
  password     String
  refreshToken String?
  googleId     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  conversations Conversation[] // Add this relation

  @@map("users")
}

model Conversation {
  id        String   @id @default(uuid())
  userId    String
  sessionId String
  message   String   // User's message
  response  String   // Dialogflow's response
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@map("conversations")
}